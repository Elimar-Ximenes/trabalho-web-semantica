@base <http://www.arida.ufc.br/mapeamentos/spotify/> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix mo: <http://purl.org/ontology/mo/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@prefix svm: <http://www.arida.ufc.br/ontologies/music#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<#ArtistMapping>
    rml:logicalSource [
        rml:source "musicas_novas_brasileiras_filtradas.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;

    rr:subjectMap [
        rr:template "http://www.arida.ufc.br/resource/Spotify/Artist/{artist_id}" ;
        rr:class mo:MusicArtist ;
        rr:class svm:MusicArtist_Spotify ;
        rr:graph <https://graphdb.arida.site/repositories/EKG_MUSICA_BR/rdf-graphs/KG_Artists_Spotify>
    ] ;

    rr:predicateObjectMap [
        rr:predicate foaf:name ;
        rr:objectMap [ rml:reference "artist_name_spotify" ; rr:language "pt" ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate schema:thumbnail ;
        rr:objectMap [ rml:reference "artist_image" ; rr:datatype xsd:anyURI ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate svm:followers ;
        rr:objectMap [ rml:reference "artist_followers" ; rr:datatype xsd:integer ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate svm:popularity ;
        rr:objectMap [ rml:reference "artist_popularity" ; rr:datatype xsd:integer ]
    ] ;

    ## Ligação do artista aos álbuns que ele fez
    rr:predicateObjectMap [
        rr:predicate foaf:made ;
        rr:objectMap [
            rr:template "http://www.arida.ufc.br/resource/Spotify/Record/{album_id}"
        ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate rdfs:label ;
        rr:objectMap [ rml:reference "artist_name_spotify" ; rr:language "pt" ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate svm:genres ;
        rr:objectMap [
            rml:reference "artist_genres" ;
            rr:termType rr:Literal ;
            rr:language "pt"
        ]
    ] ;

    # rr:predicateObjectMap [
    #     rr:predicate rdfs:comment ;
    #     rr:objectMap [ rml:reference "artist_genres" ; rr:language "pt" ]
    # ] ;

    rr:predicateObjectMap [
        rr:predicate dc:identifier ;
        rr:objectMap [ rml:reference "artist_id" ]
    ] .